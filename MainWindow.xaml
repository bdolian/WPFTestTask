<Window x:Class="WPFTestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTestApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Elements list">
                <Grid> <!-- TODO: ADD ELEMENTS -->
                    
                </Grid>
            </TabItem>
            <TabItem Header="Load picture">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.1*" MinHeight="30px"></RowDefinition>
                        <RowDefinition Height="0.9*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Button Width="100px" Content="Load picture" Grid.Row="0" Click="Button_Click"></Button>
                    <Image Grid.Row="1" x:Name="LoadedPicture"></Image>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
